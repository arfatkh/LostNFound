<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="signupPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../stylesheets/signup.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.SignupController">
   <children>
      <Button fx:id="signUpButton" layoutX="200.0" layoutY="231.0" styleClass="sign-up-button" text="Sign Up" />
      <Label layoutX="242.0" layoutY="282.0" text="Already have an account?">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="200.0" layoutY="303.0" prefHeight="15.0" prefWidth="106.0" styleClass="login-button" text="Login" />
      <TextField fx:id="nameField" layoutX="200.0" layoutY="60.0" prefHeight="26.0" prefWidth="200.0" promptText="Name" styleClass="text-field" />
      <TextField fx:id="emailField" layoutX="200.0" layoutY="100.0" prefHeight="26.0" prefWidth="200.0" promptText="Email" styleClass="text-field" />
      <TextField fx:id="phoneField" layoutX="200.0" layoutY="140.0" prefHeight="26.0" prefWidth="200.0" promptText="Phone#" styleClass="text-field" />
      <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="180.0" prefHeight="26.0" prefWidth="200.0" promptText="Password" styleClass="password-field" />
      <Label fx:id="errorField" layoutY="255.0" prefHeight="136.0" prefWidth="174.0" styleClass="error-label" text="" />
   </children>
</Pane>
